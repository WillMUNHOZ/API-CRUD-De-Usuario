{
    "openapi": "3.0.0",
    "info": {
        "title": "API CRUD de Usuários",
        "description": "Essa API tem como objetivo a manipulação de usuários.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api",
            "description": "Servidor local"
        }
    ],
    "tags": [
        {
            "name": "Authentication",
            "description": "Rotas para autenticação e registro de usuários."
        },
        {
            "name": "Users",
            "description": "Gerenciamento de recursos de usuários (CRUD)."
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome completo do usuário.",
                        "example": "João da Silva"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Endereço de e-mail único do usuário.",
                        "example": "joao@email.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "Senha do usúario. Deve ser armazenada de forma segura (hash).",
                        "example": "senha_segura123"
                    }
                }
            },
            "UserPublic": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string",
                        "description": "O id único do usuário.",
                        "example": "68b1c234260a1ddd248dba0f"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome completo do usuário.",
                        "example": "João da Silva"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Endereço de e-mail do usuário.",
                        "example": "joao@email.com"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Data que o usuário foi registrado.",
                        "example": "2025-08-31T12:12:01.802Z"
                    },
                    "updatedAt": {
                        "type": "string",
                        "description": "Data que o usuário foi atualizado.",
                        "example": "2025-08-31T12:12:01.802Z"
                    }
                }
            },
            "Login": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Endereço de e-mail do usuário.",
                        "example": "joao@email.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "Senha do usúario.",
                        "example": "senha_segura123"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/auth/register": {
            "post": {
                "summary": "Cadastro de usuário",
                "description": "Essa rota será responsável por cadastrar um novo usuário.",
                "tags": [
                    "Authentication"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "William",
                                        "email": "william@email.com",
                                        "password": "will123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Operação bem-sucedida."
                    },
                    "401": {
                        "description": "Dados ausentes ou em formato incorreto."
                    },
                    "409": {
                        "description": "E-mail já cadastrado."
                    },
                    "500": {
                        "description": "Erro do servidor interno."
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Login do usuário",
                "description": "Essa rota será de login do usuário e irá devolver um token para autenticação.",
                "tags": [
                    "Authentication"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "william@email.com",
                                        "password": "will123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token do usuário.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "E-mail e senha são obrigatórios."
                    },
                    "401": {
                        "description": "E-mail ou senha inválidos."
                    },
                    "500": {
                        "description": "Erro do servidor interno."
                    }
                }
            }
        },
        "/users": {
            "get": {
                "summary": "Listar todos os usuários",
                "description": "Essa rota será responsável por listar todos os usuários cadastrados.",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de usuários.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserPublic"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Acesso não autorizado."
                    },
                    "500": {
                        "description": "Erro do servidor interno."
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Listar usuário",
                "description": "Essa rota será responsável por listar um único usuário cadastrado.",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes de um único usuário.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserPublic"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Id inválido."
                    },
                    "401": {
                        "description": "Acesso não autorizado."
                    },
                    "404": {
                        "description": "Usúario não encontrado."
                    },
                    "500": {
                        "description": "Erro do servidor interno."
                    }
                }
            },
            "put": {
                "summary": "Atualizar usuário",
                "description": "Essa rota será responsável por atualizar um usuário existente. Todos os campos (nome, email e senha) podem ser atualizados.",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "William",
                                        "email": "william@email.com",
                                        "password": "will123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado com sucesso."
                    },
                    "400": {
                        "description": "Id inválido or data missing or in wrong format."
                    },
                    "401": {
                        "description": "Acesso não autorizado."
                    },
                    "404": {
                        "description": "Usuário não encontrado."
                    },
                    "500": {
                        "description": "Erro do servidor interno."
                    }
                }
            },
            "delete": {
                "summary": "Deletar usuário",
                "description": "Essa rota será responsável por deletar um usuário existente.",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuário excluído com sucesso."
                    },
                    "400": {
                        "description": "Id inválido or data missing or in wrong format."
                    },
                    "401": {
                        "description": "Acesso não autorizado."
                    },
                    "404": {
                        "description": "Usúario não encontrado."
                    },
                    "500": {
                        "description": "Erro do servidor interno."
                    }
                }
            }
        }
    }
}